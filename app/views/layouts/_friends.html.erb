<%= stylesheet_link_tag 'messages', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="row">

  <div class="container">
  <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
   <div class="mail-box">
      <aside class="sm-side">
          <div class="user-head">
              <a class="inbox-avatar" href="javascript:;">
                  <img  width="64" hieght="60" src="<%= current_user.avatar %>">
              </a>
              <div class="user-name">
                  <h5><a href="<%= messages_path %>"><%= "#{current_user.first_name} #{current_user.last_name}" %></a></h5>
                  <span><a href="<%= messages_path %>"><%= current_user.email %></a></span>
              </div>
              <a class="mail-dropdown pull-right" href="javascript:;">
                  <i class="fa fa-chevron-down"></i>
              </a>
          </div>

      </aside>
      <aside class="lg-side">
          <div class="inbox-head">
              <h3>Suggested People</h3>
              <form action="#" class="pull-right position">
                  <div class="input-append">
                      <input type="text" class="sr-input" placeholder="Search ...">
                      <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                  </div>
              </form>
          </div>
      </aside>

    </div>
    <div class="container">
          <%= yield %>
    </div>
  </div>

</div>
